# VoiceLoop Backend Environment Configuration

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-here
PORT=5000

# Database Configuration
DATABASE_URL=sqlite:///database/voiceloop.db

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_API_BASE=https://api.openai.com/v1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_FOLDER=uploads

# RAG Configuration
CHROMA_DB_PATH=database/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Calendar Integration
GOOGLE_CALENDAR_CLIENT_ID=your-google-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-google-client-secret
OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret

# Redis Configuration (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/voiceloop.log

# Security Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://main.d1fx10pzvtm51o.amplifyapp.com
